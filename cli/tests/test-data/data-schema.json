{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {"type": "string", "minLength": 1},
    "age": {"type": "integer", "minimum": 0, "maximum": 150},
    "city": {"type": "string"},
    "email": {"type": "string", "format": "email"}
  },
  "required": ["name", "age", "email"]
}